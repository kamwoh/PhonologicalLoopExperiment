<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/cream">

    <TextView
        android:id="@+id/beforeTaskLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:text="You have chosen" />

    <TextView
        android:id="@+id/experimentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiment Name"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>