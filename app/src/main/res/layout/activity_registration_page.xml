<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd8ad"
    tools:context="com.example.woh.cogsci.RegistrationPage">

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMale"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:background="#fefac0"
        android:ems="10"
        android:hint="Age"
        android:textColorHint="#CCCCCC"
        android:textColor="@color/blue"
        android:padding="10sp"
        android:inputType="number" />

    <RadioButton
        android:id="@+id/buttonMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:buttonTint="#fefac0"
        android:textColor="@color/blue"
        android:text="Male"
        android:layout_alignBaseline="@+id/buttonFemale"
        android:layout_alignBottom="@+id/buttonFemale"
        android:layout_toStartOf="@+id/buttonNext" />

    <RadioButton
        android:id="@+id/buttonFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignEnd="@+id/ageInput"
        android:layout_alignRight="@+id/ageInput"
        android:layout_marginBottom="92dp"
        android:buttonTint="#fefac0"
        android:textColor="@color/blue"
        android:text="Female" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:background="#fefac0"
        android:textColor="@color/blue"
        android:text="Next" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textColor="@color/blue"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textSize="20dp"
        tools:text="Tell us a little bit about yourself" />
</RelativeLayout>
