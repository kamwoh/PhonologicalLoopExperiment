<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <TextView
            android:id="@+id/beforeTaskLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="Which experiment would you like to do first?"
            android:textColor="@color/blue"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experiment"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/cream"
                android:textSize="20sp"
                android:background="@drawable/label_border"/>

            <Button
                android:id="@+id/experimentButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Phonological Similarity Effect"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/blue"/>

            <Button
                android:id="@+id/experimentButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Word Length Effect"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/blue"/>

            <Button
                android:id="@+id/experimentButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Articulacy Suppression"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/blue" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>