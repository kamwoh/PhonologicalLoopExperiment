<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/beforeTaskLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="129dp"
            android:text="Choose one experiment below" />

        <Button
            android:id="@+id/experimentButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beforeTaskLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Phonological Similarity Effect" />

        <Button
            android:id="@+id/experimentButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/experimentButton1"
            android:layout_alignLeft="@+id/experimentButton1"
            android:layout_alignRight="@+id/experimentButton1"
            android:layout_alignStart="@+id/experimentButton1"
            android:layout_below="@+id/experimentButton1"
            android:text="Word Length Effect" />

        <Button
            android:id="@+id/experimentButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/experimentButton2"
            android:layout_alignLeft="@+id/experimentButton2"
            android:layout_alignRight="@+id/experimentButton2"
            android:layout_alignStart="@+id/experimentButton2"
            android:layout_below="@+id/experimentButton2"
            android:text="Articulary suppression" />
    </RelativeLayout>
</LinearLayout>